---
const { tags, all, blog_footer } = Astro.props;
---

{all && <h3 class="tag-title">View posts by tag</h3>}
<div class=`${all && "tags"}`>
	<!-- Filter by tags: -->
	{blog_footer && <>Tags: </>}
	{
		
		tags &&
		
			tags.map((tag) => (
				<>
					<a class="tag tags_title" href={`/tag/${tag}`}>
						#{tag}
					</a>
					{``}
				</>
			))
	}
</div>
