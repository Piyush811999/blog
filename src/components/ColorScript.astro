<script is:inline>

	let blink_face = ["0 ‿ 0","- ‿ -"]


	function setFaceWideOpen() {
		Array.from(document.getElementsByClassName("website-header-icon")).forEach((e) => {
			e.textContent = "0 ‿ 0";
			// console.log(face);
		});
	}

	function setFaceBackToNormal() {
		Array.from(document.getElementsByClassName("website-header-icon")).forEach((e) => {
			e.textContent = "^ ‿ ^";
			// console.log(face);
		});
	}

	function setFaceScared() {
		Array.from(document.getElementsByClassName("website-header-icon")).forEach((e) => {
			e.textContent = "ಠ ‿ ಠ";
			// console.log(face);
		});
	}
	
	function setFaceHoverListener() {
		Array.from(document.getElementsByClassName("website-header-icon")).forEach((e) => {
			e.addEventListener("mouseover", setFaceScared);
			e.addEventListener("mouseout", setFaceBackToNormal);
		});
	}

	function setLinkHoverListener() {
		Array.from(document.querySelectorAll("a, button")).forEach((e) => {
			e.addEventListener("mouseover", setFaceWideOpen);
			e.addEventListener("mouseout", setFaceBackToNormal);
		});
	}

	let textElement = document.getElementsByClassName("website-header-icon");

	function changeText() {
		// textElement.textContent = blink_face[1];
		Array.from(textElement).forEach((e) => {
			e.textContent = blink_face[Math.floor(Math.random() * blink_face.length)];
		});
		setTimeout(() => {
			// textElement.textContent = blink_face[0];
			Array.from(textElement).forEach((e) => {
			e.textContent = blink_face[0];
		});
		}, 300); // Change back to the first entry after 500 milliseconds
	}

	(function () {
		let currentHref = new URL(window.location.href);
		let afterBaseUrl = currentHref.pathname + currentHref.search + currentHref.hash;
		console.log(afterBaseUrl);

		if (afterBaseUrl !== "/") {
			changeText();
			setFaceHoverListener()
			setInterval(changeText, Math.random() * 5000 + 2000);
			
		} else {
			// setRandomLinkColor();
			setLinkHoverListener();
			setFaceHoverListener()
		}
		
	})();
</script>
